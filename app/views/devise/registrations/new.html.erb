<div class= "flex flex-wrap justify-center content-center flex-col">
    <div class="py-4 text-lg text-center font-semibold">
        <div class="font-bold text-2xl text-indigo-500">Sign up</div>
        <br>
        <hr>
  <div class="flex flex-col text-left text-sm font-normal w-full justify-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email@email.com",
    class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "******",
    class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "******",
    class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-72 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
  </div>

  <div class="py-5">
    <%= f.submit "Sign up", class:"w-72 text-center py-2 text-white font-bold bg-indigo-500 rounded-md hover:bg-indigo-900 text-white" %>
  </div>
<% end %>
<div class="py-1 pl-5 pr-5 text-center bg-transparent border-2 text-indigo-500 border-indigo-500 text-base font-semibold rounded-lg hover:bg-indigo-500 hover:text-white focus:border-4">
<%= render "devise/shared/links"%>
</div>
</div>